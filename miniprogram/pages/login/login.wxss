.title-header {
    width: 100%;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    text-align: center;
    background: linear-gradient(135deg, #3B82F6, rgb(255, 19, 224));
}

.title-header view {
    width: 160rpx;
    height: 160rpx;
    align-self: center;
    margin-top: 10%;
    background-color: white;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    border-radius: 40rpx;

}

.title-header view image {
    width: 75%;
    height: 75%;
}

.title-header text:nth-child(2) {
    font-size: 40rpx;
    color: #2C5EFF;
}

.title-header text:nth-child(3) {
    font-size: 28rpx;
    color: white
}

.page-body {
    width: 95%;
    height: calc(100% - 400rpx);
    border-radius: 50rpx;
    background-color: white;
    border: 1rpx solid #efefef;
    margin-top: -50rpx;

    text-align: center;

    display: flex;
    flex-direction: column;
    /* padding-top: 100rpx; */
    /* gap: 40rpx; */
}

