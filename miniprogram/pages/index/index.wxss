}
.empty-tip{
  text-align: center;
  font-size: 14px;
  font-weight: 300;
}

/* 首页轮播图片样式 */
.main_swiper {
  margin: 10rpx 25rpx 20rpx 20rpx;
  border-radius: 15rpx;
  border: 2rpx #839192 solid;
  box-shadow:  10rpx 10rpx 5rpx #839192;
}

/* 首页轮播图片 */
.main_swiper_item view image {
  object-fit: contain;
  width: 100%;
}

/* 首页轮播文字 */
.main_swiper_item view text{
  color: white;
  font-size: 32rpx;
  text-align: center;
  position: absolute;
  
  top: 10rpx;
  left: 0;
  right: 0;
}

#announcement_view {
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
  border-radius: 15rpx;
  border: 1rpx gray solid;

  height: 700rpx;
}

.notice_box {
  background: rgb(17, 195, 239);
  border: 1rpx grey solid;
  border-radius: 5%;
}

.notice_title {
  text-align: center;
}

.notice_item_box {
  background: rgb(17, 195, 239);
  border: 1rpx grey solid;
  border-radius: 6%;
}