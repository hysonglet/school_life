  padding-left: 32rpx;
  margin-bottom: 25rpx;
}
.banner-container{
  display: flex;
   justify-content: center; 
   padding-top: 16px;
    padding-bottom: 16px;
}
.banner{
  width: 686rpx;
  height: 240rpx;
}
.tabs{
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.tabs-header{
  display: flex;
  justify-content: space-around;
}
.tabs-header-item-normal{
  line-height: 43px; 
}
