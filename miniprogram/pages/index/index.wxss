.banner-container {
  display: flex;
  justify-content: center;
  padding-top: 16px;
  padding-bottom: 16px;
}

.banner {
  width: 686rpx;
  height: 240rpx;
}

.tabs {
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.tabs-header {
  display: flex;
  justify-content: space-around;
}

.tabs-header-item-normal {
  line-height: 43px;
}

.tabs-header-item-selected {
  line-height: 43px;
  border-bottom: 2px #0052D9 solid;
  color: #0052D9;
}

.tabs-body {
  padding-top: 16px;
}

.empty-tip {
  text-align: center;
  font-size: 14px;
  font-weight: 300;
}

/* 首页轮播图片样式, 轮播通知和广告用 */
.main_swiper {
  margin: 10rpx 25rpx 20rpx 20rpx;
  border-radius: 15rpx;
  border: 2rpx #839192 solid;
  box-shadow: 10rpx 10rpx 5rpx #839192;

  width: 95%;
  height: 30%;
}

.main_swiper_item {
  width: 100%;
  height: 100%;
}

/* 首页轮播图片 */
.main-swiper-image {
  object-fit: contain;
  width: 100%;
  border-radius: 15rpx;
}

/* 首页轮播文字 */
.main-swiper-text {
  color: white;
  font-size: 32rpx;
  text-align: center;
  position: absolute;

  top: 10rpx;
  left: 0;
  right: 0;
}

#announcement_view {
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  text-align: center;
  border-radius: 15rpx;
  border: 1rpx gray solid;

  width: 100%;
  height: 70%;
  /* height: 700rpx; */
}

.notice_box {
  background: rgb(17, 195, 239);
  border: 1rpx grey solid;
  border-radius: 15rpx;

  margin: 10rpx 10rpx 10rpx 10rpx;
}

.notice_title {
  text-align: center;
}