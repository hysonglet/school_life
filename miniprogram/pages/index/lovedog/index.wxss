.container {
    height: 100%;
    width: 100%;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    gap: 30rpx;
}

.content {
    height: 900rpx;
    width: 90%;
    border: 1px #000 solid;
    box-shadow: 10rpx 10rpx 5rpx #839192;
    border-radius: 10px;
    margin-top: 100rpx;
    margin-left: auto;
    margin-right: auto;
    padding: 20rpx;
}

.btn-group {
    display: flex;
    flex-direction: row;
    gap: 50rpx;
    align-self: center;
    margin-top: 60rpx;
}

