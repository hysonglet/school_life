<view class="page">
  <van-nav-bar
    title="{{title}}"
    left-text="返回"
    left-arrow
    bind:click-left="onClickLeft"
  />
  <view class="container">
    <scroll-view class="content" scroll-y="true">
      <text>
      {{content}}
      </text>
    </scroll-view>
    <view class="btn-group">
      <van-button type="primary" bind:click="onCopyToClipboard">复制</van-button>
      <van-button type="primary" bind:click="onRefreshNew">刷新</van-button>
    </view>
  </view>
</view>