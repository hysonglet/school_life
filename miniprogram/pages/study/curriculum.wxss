
/* 课程表总容器 */
.course-schedule {
  width: 100%;
  height: 60%;
}

/* 课程表的标题,教学周 */
.course-schedule-title {
  width: 100%;
  height: 20%;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.course-schedule-title text:nth-child(1) {
  width: 300rpx;
  margin-left: 30rpx;
  font-size: 40rpx;
  color: blue;
}

.course-schedule-week {
  /* background-color: green; */
  width: 100%;
  font-size: 35rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  margin-right: 5%;
  gap: 20rpx;
}

.course-schedule-week-content {
  width: 100%;
  height: 100%;
  /* background-color:red; */

  display: flex;
  flex-direction: row;
  /* grid-row: 7; */
}

.course-schedule-week-index {
  width: 9%;
  height: 100%;

  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: space-around;
}

/* 每日的列容器样式 */
.course-schedule-week-day {
  width: 15%;
  height: 100%;
  /* border: 1rpx solid green; */
  /* background-color: aqua; */

  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: space-around;
}

/* 每日课程的容器样式 */
.course-schedule-box {
  border: 2rpx solid greenyellow;
  height: 20%;
  text-size-adjust: 78%;
  margin: 0rpx;
  border-radius: 10%;
}

.course-schedule-week-day :first-child {
  /* height: 100%; */
  width: 100%;
  font-size: 28rpx;
  font-weight: 900;
  align-items: center;
  justify-content: space-around;
  margin-top: -10rpx;
  text-align: center;
}

/* 空课容器的样式 */
.course-schedule-box-empty{
  border: 2rpx solid greenyellow;
  height: calc(100%/5);
}



